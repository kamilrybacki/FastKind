---
kind: Cluster
name: "{{ serve_my_kind_cluster_name }}"
apiVersion: kind.x-k8s.io/v1alpha4
nodes:
  - role: "control-plane"
    kubeadmConfigPatches:
    - |
      {{ _serve_my_kind_setup_cluster_ingress_enabled_config | indent(6) }}
    - |
      {{ _serve_my_kind_setup_cluster_dns_config | indent(6) }}

    {% if serve_my_kind_use_coredns %}

      {{ _serve_my_kind_setup_cluster_coredns_config | indent(6) }}

    {% endif %}

    {% if serve_my_kind_setup_cluster_enable_strict_arp %}
    - |
      {{ _serve_my_kind_setup_cluster_ipvs_strict_arp_config | indent(6) }}
    {% endif %}

    extraPortMappings:
    - containerPort: 80
      hostPort: 80
      protocol: TCP
      listenAddress: 127.0.0.1
    - containerPort: 443
      hostPort: 443
      protocol: TCP
      listenAddress: 127.0.0.1

{% for index in range(serve_my_kind_setup_cluster_normal_workers) %}

  - role: "worker"
    kubeadmConfigPatches:
      - |
        kind: JoinConfiguration
        nodeRegistration:
          kubeletExtraArgs:
            node-labels: "smk.cluster-role.worker=worker"

{% endfor %}

{% if serve_my_kind_setup_cluster_special_nodes | length > 0 %}

{% for node in serve_my_kind_setup_cluster_special_nodes %}

{% set nodes = 1 %}
{% if node.amount is defined %}
{% set nodes = node.amount %}
{% endif %}
{% if node.extraMounts is defined %}
{% set nodes = 1 %}
{% endif %}
{% if node.extraPortMappings is defined %}
{% set nodes = 1 %}
{% endif %}

{% for index in range(nodes) %}
  
  - role: "{{ node.role }}"

    {% if node.extraMounts is defined %}
    
    extraMounts:

    {% for mount in node.extraMounts %}
    
    - containerPath: "{{ mount.containerPath }}"
      hostPath: "{{ mount.hostPath }}"
      readOnly: {{ mount.readOnly | default(false) }}
      selinuxRelabel: {{ mount.selinuxRelabel | default(false) }}
      propagation: "{{ mount.propagation | default(None) }}"
    
    {% endfor %}

    {% endif %}

    {% if node.extraPortMappings is defined %}

    extraPortMappings:

    {% for port in node.extraPortMappings %}
    
    - containerPort: {{ port.containerPort }}
      hostPort: {{ port.hostPort }}
      protocol: "{{ port.protocol | default("TCP") }}"
      listenAddress: "{{ port.listenAddress | default("127.0.0.1") }}"

    {% endfor %}

    {% endif %}

    {% if node.extraLabels is defined %}

    labels:

    {% for label in node.extraLabels %}

      {{ label.name }}: {{ label.value }}

    {% endfor %}

    {% endif %}

    kubeadmConfigPatches:
    - |
      kind: JoinConfiguration
      nodeRegistration:
        kubeletExtraArgs:
          system-reserved: memory={{ node.memory }},cpu={{ node.cpu }}
    {% if node.extraKubeadmPatches is defined %}
      {{ node.extraKubeadmPatches | to_nice_yaml | indent(8) }}
    {% endif %}

{% endfor %}

{% endfor %}

{% endif %}
