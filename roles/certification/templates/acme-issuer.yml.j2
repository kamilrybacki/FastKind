---
apiVersion: "cert-manager.io/v1"
kind: "ClusterIssuer"
metadata:
  name: "{{ _serve_my_kind_issuer_type }}-issuer"
  namespace: "{{ serve_my_kind_networking_namespace }}"
spec:
  acme:
    email: "{{ serve_my_kind_certification_issuer_email }}"
    server: "https://{{ serve_my_kind_certification_private_ca_ip }}:{{ serve_my_kind_certification_private_ca_port }}/acme/{{ serve_my_kind_cluster_name }}-{{ _serve_my_kind_issuer_type }}/directory"
    privateKeySecretRef:
      name: "{{ _serve_my_kind_issuer_type }}-issuer-account-key"
    solvers:
      - http01:
          ingress:
            ingressClassName: "{{ serve_my_kind_ingress_type }}"
